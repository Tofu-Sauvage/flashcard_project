{% extends "base.html.twig" %}

{% block title %}Création d'une carte{% endblock %}

{% block body %}

    <div class="container-fluid">

      <div class="alert alert-success">
        <h2>Formulaire de cartes</h2>
      </div>

      <div class="alert alert-info mb-5">
        Categorie : {{category.name}}
      </div>

      {{ form_start(cardForm) }}

        <div class="form-group">
          {{ form_label(cardForm.question, "Question, dans la langue que vous apprenez") }}
          {{ form_widget(cardForm.question, {attr: {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(cardForm.answer, "Réponse, dans votre langue natale") }}
          {{ form_widget(cardForm.answer, {attr: {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group" {% if category.name is not same as("Conjugaison") %}style="display: none;"{% endif %}>
          {{ form_label(cardForm.tense, "Temps") }}
          {{ form_widget(cardForm.tense, { attr: {'class': 'form-control'}}) }}
        </div>

        <div class="form-group" {% if category.name is not same as("Conjugaison") %}style="display: none;"{% endif %}>
          {{ form_label(cardForm.mood, "Mode") }}
          {{ form_widget(cardForm.mood, { attr: {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(cardForm.sentence1, "Description question (facultatif)") }}
          {{ form_widget(cardForm.sentence1, {attr: {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(cardForm.sentence2, "Description réponse (facultatif)") }}
          {{ form_widget(cardForm.sentence2, {attr: {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(cardForm.image, "Une image d'illustration ? (facultatif)") }}
          {{ form_widget(cardForm.image, {attr: {'class': 'form-control-file mt-4', 'style': 'opacity:1; z-index:1'}}) }}
        </div>

        <div class="form-group">
          {% if not modeEdition %}
            {{ form_widget(cardForm.Ajouter, {'label': 'Ajouter une carte', attr: {'class': 'btn btn-success mt-4'}}) }}
          {% else %}
            {{ form_widget(cardForm.Ajouter, {'label': 'Modifier cette carte', attr: {'class': 'btn btn-success mt-4'}}) }}
          {% endif %}
		    </div>

      {{ form_end(cardForm) }}

    </div>


{% endblock %}
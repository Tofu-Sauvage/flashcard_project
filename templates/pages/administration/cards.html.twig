{% extends './pages/administration/admin.base.html.twig'%} {%block body%}

<div class="content">
  <div class="container-fluid">
    <div>
      <div class="card">
        <div class="card-header card-header-tabs card-header-warning">
          <div class="nav-tabs-navigation">
            <p class="h3">
              {% set count = 0 %} {% for card in cards %} {% set count = count +
              1 %} {% endfor %} {{ count }} cartes créées
            </p>
          </div>
        </div>
        <div class="card-body">
          <div class="tab-content">
            <div class="tab-pane active" id="profile">
              <table class="table">
                <thead class="text-warning">
                  <tr>
                    <th>ID</th>
                    <th>Auteur</th>
                    <th>Langue</th>
                    <th>Catégorie</th>
                    <th>Question</th>
                    <th>Créée le</th>
                    <th>Decks concernés</th>
                    <th>Voir</th>
                  </tr>
                </thead>
                <tbody>
                  {% for card in cards %}
                  <tr>
                    <td>{{ card.id }}</td>
                    <td>{{ card.author.name }}</td>
                    <td>{{ card.author.languageLearn.name }}</td>
                    <td>{{ card.category.name }}</td>
                    <td>{{ card.question |length > 20 ? card.question|slice(0, 20) ~ '...' : card.question }}</td>
                    <td>{{card.createdAt | date("d/m/Y") }}</td>
                    <td>
                      {% set count = 0 %} {% for deck in card.decks %} {% set
                      count = count + 1 %} {% endfor %} {{ count }}
                    </td>

                    <td class="td-actions text-right">
                      <a href="{{ path('admin-card', { id: card.id }) }}"><button
                        type="button"
                        rel="tooltip"
                        title=""
                        class="btn btn-white btn-link btn-sm"
                      >
                        <i class="material-icons">remove_red_eye</i>
                      </button></a>
                    </td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

{% endblock body %}
{% extends './pages/administration/admin.base.html.twig'%} {%block body%}

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4 col-md-12">
        <div class="card">
          <div class="card-header card-header-primary">
            <h4 class="card-title">Derniers inscrits</h4>
            <p>
              (total : {% set count = 0 %} {% for user in allUsers %} {% set
              count = count + 1 %} {% endfor %}
              {{ count }}
              )
            </p>
          </div>
          <div class="card-body table-responsive">
            <table class="table table-hover">
              <thead class="text-warning">
                <tr>
                  <th>ID</th>
                  <th>Nom</th>
                  <th>Langue mat.</th>
                  <th>Apprend le</th>
                  <th>Inscrit depuis</th>
                  <th>Cartes créées</th>
                  <th>Decks crées</th>
                </tr>
              </thead>
              <tbody>
                {% for user in users %}
                <tr>
                  <td>{{ user.id }}</td>
                  <td>
                    <a href="{{ path('admin-user', { id: user.id }) }}">{{ user.name }}</a>
                  </td>
                  <td>
                    {{ user.languageNative.name }}
                  </td>
                  <td>
                    {{ user.languageLearn.name }}
                  </td>
                  <td>{{user.createdAt | date("d/m/Y") }}</td>
                  <td class="text-center">
                    {% set count = 0 %} {% for card in user.cards %} {% set
                    count = count + 1 %} {% endfor %}
                    {{ count }}
                  </td>
                  <td class="text-center">
                    {% set count = 0 %} {% for deck in user.decks %} {% set
                    count = count + 1 %} {% endfor %}
                    {{ count }}
                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-12">
        <div class="card">
          <div class="card-header card-header-info">
            <h4 class="card-title">Dernières cards</h4>
            <p>
              (total : {% set count = 0 %} {% for card in allCards %} {% set
              count = count + 1 %} {% endfor %} {{ count }})
            </p>
          </div>
          <div class="card-body table-responsive">
            <table class="table table-hover">
              <thead class="text-warning">
                <tr>
                  <th>ID</th>
                  <th>Langue</th>
                  <th>Catégorie</th>
                  <th>Créé le</th>
                  <th>Auteur</th>
                </tr>
              </thead>
              <tbody>
                {% for card in cards %}
                <tr>
                  <td>
                    <a href="{{ path('admin-card', { id: card.id }) }}">{{ card.id }}</a>
                  </td>
                  <td>{{ card.author.languageLearn.name }}</td>
                  <td>{{ card.category.name }}</td>
                  <td>{{card.createdAt | date("d/m/Y") }}</td>
                  <td>{{ card.author.name }}</td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-12">
        <div class="card">
          <div class="card-header card-header-warning">
            <h4 class="card-title">Derniers decks</h4>
            <p>
              (total : {% set count = 0 %} {% for deck in allDecks %} {% set
              count = count + 1 %} {% endfor %} {{ count }})
            </p>
          </div>
          <div class="card-body table-responsive">
            <table class="table table-hover">
              <thead class="text-warning">
                <tr>
                  <th>ID</th>
                  <th>Nom</th>
                  <th>Langue</th>
                  <th>Créé le</th>
                  <th>Auteur</th>
                </tr>
              </thead>
              <tbody>
                {% for deck in decks %}
                <tr>
                  <td>{{ deck.id }}</td>
                  <td>
                    <a href="{{ path('admin-deck', { id: deck.id }) }}">{{ deck.name }}</a>
                  </td>
                  <td>{{ deck.author.languageLearn.name }}</td>
                  <td>{{ deck.createdAt | date("d/m/Y") }}</td>
                  <td>{{ deck.author.name }}</td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



{% endblock body %}

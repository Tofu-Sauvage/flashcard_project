{% extends './pages/administration/admin.base.html.twig'%}
{% block title %}Liste des decks{% endblock %}
{% block body %}

<div class="content">
  <div class="container-fluid">
    <div>
      <div class="card">
        <div class="card-header card-header-tabs card-header-primary">
          <div class="nav-tabs-navigation">
            <p class="h3">
              {% set count = 0 %} {% for deck in decksTable %} {% set count =
              count + 1 %} {% endfor %} {{ count }} decks créés
            </p>
          </div>
        </div>
        <div class="card-body">
          <div class="tab-content table-responsive">
            <div class="tab-panel active">
              <table class="table text-left" id="decktable">
                <thead>
                  <tr>
                    <th
                      class="text-primary"
                      style="cursor: pointer"
                      onclick="sortTable('decktable', 0)"
                    >
                      ID<i class="material-icons icon">keyboard_arrow_up</i>
                    </th>
                    <th
                      class="text-primary"
                      style="cursor: pointer"
                      onclick="sortTable('decktable', 1)"
                    >
                      Auteur<i class="material-icons icon">keyboard_arrow_up</i>
                    </th>
                    <th
                      class="text-primary"
                      style="cursor: pointer"
                      onclick="sortTable('decktable', 2)"
                    >
                      Langue<i class="material-icons icon">keyboard_arrow_up</i>
                    </th>
                    <th
                      class="text-primary"
                      style="cursor: pointer"
                      onclick="sortTable('decktable', 3)"
                    >
                      Titre<i class="material-icons icon">keyboard_arrow_up</i>
                    </th>
                    <th
                      class="text-primary"
                      style="cursor: pointer"
                      onclick="sortTable('decktable', 4)"
                    >
                      Créée le<i class="material-icons icon"
                        >keyboard_arrow_up</i
                      >
                    </th>
                    <th
                      class="text-primary"
                      style="cursor: pointer"
                      onclick="sortTable('decktable', 5)"
                    >
                      Nbre de cartes concernées<i class="material-icons icon"
                        >keyboard_arrow_up</i
                      >
                    </th>
                    <th
                      class="text-primary"
                      style="cursor: pointer"
                      onclick="sortTable('decktable', 6)"
                    >
                      Combien de fan(s)<i class="material-icons icon">keyboard_arrow_up</i>
                    </th>

                    <th class="text-primary">Voir</th>
                  </tr>
                </thead>
                <tbody>
                  {% for deck in decks %}
                  <tr>
                    <td>{{ deck.id }}</td>
                    <td>
                      <a
                        href="{{ path('admin-user', { id: deck.author.id }) }}"
                        >{{ deck.author.name }}</a
                      >
                    </td>
                    <td>
                      <a
                        href="{{
                          path('language-details', {
                            id: deck.author.languageLearn.id
                          })
                        }}"
                        >{{ deck.author.languageLearn.name }}</a
                      >
                    </td>
                    <td>
                      {{deck.name | length > 10 ? deck.name|slice(0, 10) ~ '...' : deck.name }}
                    </td>
                    <td>{{deck.createdAt | date("d/m/Y") }}</td>
                    <td>
                      {% set count = 0 %} {% for card in deck.cards %} {% set
                      count = count + 1 %} {% endfor %} {{ count }}
                    </td>
                    <td>
                      {% set countFan = 0 %} {% for fan in deck.fans %} {% set
                      countFan = countFan + 1 %} {% endfor %}{{ countFan }}
                    </td>
                    <td class="td-actions text-left">
                      <a href="{{ path('admin-deck', { id: deck.id }) }}"
                        ><button
                          type="button"
                          rel="tooltip"
                          title=""
                          class="btn btn-white btn-link btn-sm"
                        >
                          <i class="material-icons">remove_red_eye</i>
                        </button></a
                      >
                    </td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
              {{ knp_pagination_render(decks) }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock body %}

{% extends './pages/administration/admin.base.html.twig'%} {%block body%}

<div class="content">
  <div class="container-fluid">
    <div>
      <div class="card">
        <div class="card-header card-header-tabs card-header-info">
          <div class="nav-tabs-navigation">
            <p class="h3">
              {% set count = 0 %} {% for user in users %} {% set count = count +
              1 %} {% endfor %} {{ count }} utilisateurs inscrits
            </p>
          </div>
        </div>
        <div class="card-body">
          <div class="tab-content">
            <div class="tab-pane active" id="profile">
              <table class="table">
                <thead class="text-warning">
                  <tr>
                    <th>ID</th>
                    <th>Rôle</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Langue mat.</th>
                    <th>Apprend le</th>
                    <th>Inscrit depuis</th>
                    <th>Cartes créées</th>
                    <th>Decks crées</th>
                    <th>Voir</th>
                  </tr>
                </thead>
                <tbody>
                  {% for user in users %}
                  <tr>
                    <td>{{ user.id }}</td>
                    <td>
                      {% if user.roles[0] == 'ROLE_ADMIN' %} Administrateur {%
                      elseif user.roles[0] == 'ROLE_USER' %} Utilisateur {%
                      endif %}
                    </td>
                    <td>
                      <a href="{{ path('admin-user', { id: user.id }) }}">{{
                        user.name
                      }}</a>
                    </td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.languageNative.name }}</td>
                    <td>{{ user.languageLearn.name }}</td>
                    <td>{{user.createdAt | date("d/m/Y") }}</td>
                    <td>
                      {% set count = 0 %} {% for card in user.cards %} {% set
                      count = count + 1 %} {% endfor %} {{ count }}
                    </td>
                    <td>
                      {% set count = 0 %} {% for deck in user.decks %} {% set
                      count = count + 1 %} {% endfor %} {{ count }}
                    </td>

                    <td class="td-actions text-right">
                      <a href="{{ path('admin-user', { id: user.id }) }}">
                        <button
                          type="button"
                          rel="tooltip"
                          title=""
                          class="btn btn-white btn-link btn-sm"
                          data-original-title="Edit Task"
                        >
                          <i class="material-icons">remove_red_eye</i>
                        </button>
                      </a>
                    </td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock body %}
